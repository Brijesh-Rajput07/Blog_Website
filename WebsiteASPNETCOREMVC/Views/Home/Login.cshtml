@model WebsiteASPNETCOREMVC.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #88FFCB;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .login-container {
            background-color: #0E1621;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
            width: 350px;
            color: white;
            text-align: center;
        }
        .login-container input {
            background: none;
            border: none;
            border-bottom: 1px solid #fff;
            border-radius: 0;
            color: white;
            outline: none;
        }
        .login-container input::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }
        .login-container .btn {
            background-color: #88FFCB;
            color: #000;
            border-radius: 30px;
            font-weight: bold;
        }
        .login-container .btn:hover {
            background-color: #76E6B7;
        }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center">
    <div class="login-container ">
        <h5>Log in or create a new account.</h5>

<form asp-action="Login" asp-controller="Home" method="post">
    <div class="mb-3 text-start">
        <label class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter your name">
        <span asp-validation-for="Name" style="color:red;"></span>
    </div>
    <div class="mb-3 text-start">
        <label class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email">
        <span asp-validation-for="Email" style="color:red;"></span>
    </div>
    <div class="mb-3 text-start">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="Enter your password">
        <span asp-validation-for="Password" style="color:red;"></span>
    </div>
    <div class="mb-4 text-start">
        <label class="form-label">Confirm Password</label>
        <input type="password" class="form-control" asp-for="ConfirmedPassword" placeholder="Confirm your password">
        <span asp-validation-for="ConfirmedPassword" style="color:red;"></span>
    </div>
    <button type="submit" class="btn w-100 py-2">Create Account</button>
</form>

        <a asp-action="Signin" asp-controller="Home" class="text-white mt-5">Already have an account?</a>
    </div>
    </div>

</body>
</html>

