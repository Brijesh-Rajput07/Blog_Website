@model WebsiteASPNETCOREMVC.Models.User

@{
    ViewData["Title"] = "Profile";
}

<style>
    .profile-container {
        margin-top: 100px;
        background-color: #f4f6f9;
        border-radius: 10px;
        padding: 30px;
        max-width: 800px;
        margin: 0 auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .profile-header {
        text-align: center;
        margin-bottom: 20px;
    }

        .profile-header h4 {
            font-size: 2rem;
            color: #2c3e50;
        }

        .profile-header img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-top: 10px;
        }

    .dl-horizontal dt {
        font-weight: bold;
        color: #34495e;
    }

    .dl-horizontal dd {
        color: #7f8c8d;
    }

    .action-links {
        text-align: center;
        margin-top: 30px;
    }

        .action-links a {
            background-color: #3498db;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1.1rem;
            margin: 0 10px;
            transition: background-color 0.3s;
        }

            .action-links a:hover {
                background-color: #2980b9;
            }

    .row {
        margin-top: 20px;
    }
</style>

<div class="profile-container" style="margin-top: 120px;">
    <div class="profile-header">
        <img src="~/images/profile.jpg" alt="Your Image" />
        <h4>User Profile</h4>
    </div>

    <dl class="row dl-horizontal">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Password)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Password)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ConfirmedPassword)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ConfirmedPassword)</dd>
    </dl>

    <div class="action-links">
        <a asp-action="Edit" asp-controller="Home" asp-route-id="@Model?.Id">Edit</a>
        <a asp-action="Index" asp-controller="Page">Back to Home</a>
    </div>
</div>
