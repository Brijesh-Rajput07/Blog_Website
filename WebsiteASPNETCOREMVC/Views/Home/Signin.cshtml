@model WebsiteASPNETCOREMVC.Models.User
@{
    ViewData["Title"] = "Signin";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
        background-color: #00FFCC;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        }
        .card {
        background-color: #1A1A2E;
        color: white;
        border-radius: 12px;
        padding: 20px;
        width: 300px;
        }
        .btn-custom {
        background-color: #00FFCC;
        color: #000;
        }
    </style>
</head>

<body>
   <div>
        @{
            var t = (bool)TempData["alert"];
            if (t)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Your Email or Password wrong!</strong> You should check in on some of those fields below.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        }
   
    <div class="d-flex justify-content-center">
    <div class="card">
        <h5 class="text-center">Log in or create a new account.</h5>
        
        <form asp-action="Signin" asp-controller="Home" method="post">
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" id="Email" name="Email" required />
                <span asp-validation-for="Email" style="color:red"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="Password" name="Password" required />
                    <span asp-validation-for="Password" style="color:red"></span>
            </div>
            <button type="submit" class="btn btn-custom w-100">Sign In</button>
        </form>

        <div class="text-center mt-3">
            <a asp-controller="Home" asp-action="Login" class="text-decoration-none text-white">Don't have an account?</a>
        </div>
    </div>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


