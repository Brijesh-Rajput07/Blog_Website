@{
    var name = TempData["username"];
    ViewData["username"] = name; 
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebsiteASPNETCOREMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebsiteASPNETCOREMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <style>
            .custom-header {
                background-color: #1a202c; /* Replace with your desired color */
                color: white;
                height: 65px;
            }
        </style>
       
        <nav class="navbar navbar-expand-lg custom-header fixed-top">
            <div class="container">
                <a class="navbar-brand text-white" asp-action="Index" asp-controller="Page">MindChronicles</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item ms-5">
                            <a class="nav-link text-white" asp-action="Index" asp-controller="Page">Home</a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="nav-link text-white" asp-action="Index" asp-controller="Page">Blog Details</a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="nav-link text-white" asp-action="Create" asp-controller="Page">Create Blog</a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="nav-link text-white" asp-action="Contact" asp-controller="Home">Contact</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> @Context.Session.GetString("username")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Profile">Profile</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Login">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="custom-footer text-white">
        <style>
            .custom-footer {
                background-color: #1a202c; /* Same as the header color */
                color: white;
                height: 80px;
                position: absolute;
                bottom: 0;
                width: 100%;
                display: flex;
                align-items: center;
                justify-content: center;

            }

                .custom-footer .footer-item {
                    margin: 0 15px;
                    text-align: center;
                }

                .custom-footer p {
                    margin: 0;
                }
        </style>
        <div class="container d-flex justify-content-between">
            <div class="footer-item">
                <h6>Call</h6>
                <p>+91 987529 97238</p>
            </div>
            <div class="footer-item">
                <h6>Email</h6>
                <p><a href="mailto:rajputbrijesh170@gmail.com" style="color:white; text-decoration: none; ">rajputbrijesh170@gmail.com</a></p>
            </div>
            <div class="footer-item">
                <h6>Address</h6>
                <p>Mehasana, Gujarat</p>
            </div>
            <div class="footer-item mt-2">
                <p>&copy; Brijesh Rajput. All rights reserved.</p>
            </div>
        </div>
    </footer>


   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @section Scripts {
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }

</body>
</html>
