@model IEnumerable<WebsiteASPNETCOREMVC.Models.Blog>

@{
    ViewData["Title"] = "Index";
}

<h1>Blog Posts</h1>

<p>
    <a asp-action="Create" asp-controller="Page" class="btn btn-success" style="margin-top:30px">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card">
                <!-- Image Column -->
                @if (!string.IsNullOrEmpty(item.FilePath))
                {
                    <img src="~/@item.FilePath" alt="Blog Image" class="blog-image" />
                }

                <div class="card-body">
                    <!-- Title Column -->
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Content</p>
                    <p class="card-text"><strong>Category:</strong> @item.Category</p>
                    <p class="card-text"><strong>Tags:</strong> @item.Tags</p>
                    <p class="card-text"><strong>Published:</strong> @item.PublishDate.ToString("MM/dd/yyyy")</p>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-controller="Page" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Details" asp-controller="Page" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-controller="Page" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
