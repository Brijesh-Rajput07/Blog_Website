@model WebsiteASPNETCOREMVC.Models.Blog

@{
    ViewData["Title"] = "Newblog";
    var t = TempData["upblog"];
}

<style>
    .blog-container {
    max-width: 900px;
    margin: 80px auto; /* Avoid overlap with header/footer */
    padding: 20px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    position: relative;
    z-index: 10; /* Lower z-index to stay below layout header/footer */
    }

    h1 {
    text-align: center;
    font-weight: bold;
    }

    .blog-image {
    display: block;
    margin: 0 auto 15px;
    border-radius: 10px;
    max-width: 100%;
    height: auto;
    }

    .blog-details dt {
    font-weight: bold;
    }

    .buttons {
    text-align: center;
    }

    .btn {
    margin: 5px;
    padding: 8px 20px;
    border-radius: 5px;
    border: none;
    cursor: pointer;
    }

    .btn-primary {
    background-color: #007bff;
    color: white;
    }

    .btn-secondary {
    background-color: #6c757d;
    color: white;
    }
</style>

<div class="blog-container">
    @{
        
        if ((bool)t)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Your changes are saved Successfully!</strong>Changes Done.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    }
    <h1>Your New Blog</h1>
    <hr />

    @if (!string.IsNullOrEmpty(Model.FilePath))
    {
        <img src="~/@Model.FilePath" alt="Blog Image" class="blog-image" />
    }

    <dl class="blog-details">
        <dt>Title:</dt><dd>@Html.DisplayFor(model => model.Title)</dd>

        <dt>Content:</dt>
        <dd>@Html.DisplayFor(model => model.Content)</dd>

        <dt>Category:</dt>
        <dd>@Html.DisplayFor(model => model.Category)</dd>

        <dt>Tags:</dt>
        <dd>@Html.DisplayFor(model => model.Tags)</dd>

        <dt>PublishDate:</dt>
        <dd>@Html.DisplayFor(model => model.PublishDate)</dd>
    </dl>

    <div class="buttons">
        <a asp-action="Edit" asp-controller="Page" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" asp-controller="Page" class="btn btn-secondary">Back to Home</a>
    </div>
</div>
